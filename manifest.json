{
  "manifest_version": 2,
  "name": "Shlink",
  "version": "0.1.0",
  "description": "Unofficial Shlink extension",
  "icons": {
    "16": "icons/shlink-16.png",
    "48": "icons/shlink-48.png",
    "64": "icons/shlink-64.png"
  },
  "permissions": [
    "tabs",
    "notifications",
    "clipboardWrite",
    "storage",
    "<all_urls>"
  ],
  "options_ui": {
    "page": "options.html"
  },
  "browser_action": {
    "default_icon": "icons/shlink-64.png",
    "default_title": "Link it!"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  }
}